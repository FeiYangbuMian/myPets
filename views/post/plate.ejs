<!-- 发帖 -->
<div class="container">
    <h4 class="text-info"><i class="glyphicon glyphicon-pencil"></i> &nbsp;发表新帖</h4>
    <form name="addForm" enctype="multipart/form-data">
        <input type="hidden" id="plateId" name="plateId" value="" />
        <input type="hidden" id="userName" name="userName" value="" />
    <div class="input-group">
        <span class="input-group-addon" id="plateName">#猫</span>
        <input type="text" class="form-control" placeholder="请输入标题" id="postTitle" name="postTitle" />
    </div>
    <div class="form-group">
        <textarea title="发帖内容" id="postContent" name="postContent" ></textarea>
    </div>
    <div class="form-group">
        <input type="file" id="postPhoto" name="postPhoto" multiple="multiple" />
        <p class="help-block">注：仅支持.jpg .png格式。</p>
        <div id="content" class="z-post-imgs">
        </div>
    </div>
    </form>
    <div class="form-group">
        <button class="btn btn-info" id="up_post">发&nbsp;表</button>
        <!--<span class="checkbox z-ml">
             <label class="text-muted">
                 <input type="checkbox" id="postLimit" name="postLimit" />仅自己可见
             </label>
        </span>-->
    </div>
</div>
<footer class="text-muted">©2019 版权所有 @肥羊不绵</footer>

<script type="text/template" id="tem-plate" >
    <div class=" hidden-xs col-sm-3 col-md-3 col-lg-3">
        <img src="/image/{{platePhoto}}" class="img-thumbnail"  />
    </div>
    <div class="col-sm-9 col-md-9 col-lg-9">
        <h1>{{plateName}}</h1>
        <p>{{plateIntro}}</p>
    </div>
</script>

<script type="text/template" id="tem-list" >
    <li class="panel panel-default"  data-id="{{postId}}">
        <div class="panel-heading">
            <span class="badge">{{postReply}}</span>
            {{postTitle}}
            <span class="pull-right"><i class="glyphicon glyphicon-user"></i>&nbsp;{{userName}}</span>
        </div>
        <div class="panel-body">
            {{postContent}}
            <div class="z-post-imgs" >
            </div>
        </div>
    </li>
</script>

<script type="text/template" id="tem-img" >
    <img src="../../public/image/img_cat.jpg">

</script>
